#include "tegra234-camera-rbpcv2-imx334.dtsi"
#include "dt-bindings/clock/tegra234-clock.h"

// GPIO01
#define CAM0_RST	TEGRA234_MAIN_GPIO(Q, 5)
// CAM1_PWDN 
#define CAM1_PWDN	TEGRA234_MAIN_GPIO(AC, 0)

/* camera control gpio definitions */

/ {
	i2c@c240000 {
		#address-cells = <1>;
		#size-cells = <0>;
		pca9570_a@24 {
			compatible = "nvidia,pca9570";
			reg = <0x24>;
			channel = "a";
			drive_ic = "DRV8838";
		};

		imx334_a@1a {
			/* Define any required hw resources needed by driver */
			/* ie. clocks, io pins, power sources */
			clocks = <&bpmp_clks TEGRA234_CLK_EXTPERIPH1>,
						<&bpmp_clks TEGRA234_CLK_PLLP_OUT0>;
			clock-names = "extperiph1", "pllp_grtba";
			mclk = "extperiph1";
			clock-frequency = <37125000>;
			reset-gpios = <&tegra_main_gpio CAM0_RST GPIO_ACTIVE_HIGH>;
			pwdn-gpios = <&tegra_main_gpio CAM1_PWDN GPIO_ACTIVE_HIGH>;
			vana-supply = <&en_vdd_cam_hv_2v8>;
			vif-supply = <&en_vdd_cam>;
			vdig-supply = <&en_vdd_cam_1v2>;
		};
	};
};